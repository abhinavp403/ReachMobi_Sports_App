<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp">

            <TextView
                android:id="@+id/league_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="ndjwndjnj"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/event_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/league_name_tv"
                android:layout_marginTop="2dp"
                android:text="ndjwndjnj"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/home_team_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_name_tv"
                android:layout_marginTop="2dp"
                android:layout_marginStart="4dp"
                android:text="ndjwndjnj"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/home_score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_name_tv"
                android:layout_toEndOf="@+id/home_team_tv"
                android:layout_marginTop="2dp"
                android:layout_marginStart="4dp"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/away_team_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_name_tv"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:layout_alignParentEnd="true"
                android:text="ndjwndj"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/away_score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_name_tv"
                android:layout_toStartOf="@+id/away_team_tv"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/venue_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_team_tv"
                android:layout_marginTop="2dp"
                android:text="ndjwndjnj"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/venue_tv"
                android:layout_marginTop="2dp"
                android:text="ndjwndjnj"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="italic"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>